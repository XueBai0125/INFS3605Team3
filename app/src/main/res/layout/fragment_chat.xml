<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        >



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:text="Chat"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_logo"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/default_male"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/tv_email1"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:text="2085615@gmail.com"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email1"
            app:layout_constraintStart_toEndOf="@id/iv_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:text="hi "
            android:ellipsize="end"
            android:layout_width="0dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#EBEBED"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_logo1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/default_male"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/tv_email0"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_logo1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:text="2085615@gmail.com"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_info1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email0"
            app:layout_constraintStart_toEndOf="@id/iv_logo1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:text="hi "
            android:ellipsize="end"
            android:layout_width="0dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/iv_logo1"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#EBEBED"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_logo2"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/default_male"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/tv_email2"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_logo2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:text="2085615@gmail.com"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_info2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email2"
            app:layout_constraintStart_toEndOf="@id/iv_logo2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:text="hi "
            android:ellipsize="end"
            android:layout_width="0dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/iv_logo2"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#EBEBED"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
