<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:padding="10dp"
            android:src="@drawable/icon_set" />
    </androidx.appcompat.widget.Toolbar>




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingTop="40dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="36dp"
                    android:background="@drawable/person_center_bg">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:layout_marginEnd="110dp"
                        android:singleLine="true"
                        android:text="User Name"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_username"
                        android:drawableEnd="@drawable/rightmid_grey"
                        android:drawablePadding="2dp"
                        android:text="Edit Profile"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_male" />

                </RelativeLayout>

                <LinearLayout

                     android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_first"
                        android:layout_marginStart="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_ybwj" />

                        <TextView
                            android:id="@+id/tv_first"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="WishList"
                            android:textColor="#333333"
                            android:layout_marginBottom="30dp"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_second"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_my_order" />

                        <TextView
                            android:id="@+id/tv_second"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Orders"
                            android:textColor="#333333"
                            android:layout_marginBottom="30dp"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_three"
                        android:layout_marginStart="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_my_report" />

                        <TextView
                            android:id="@+id/tv_three"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="WishList"
                            android:textColor="#333333"
                            android:layout_marginBottom="30dp"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_four"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_flower_coupon" />

                        <TextView
                            android:id="@+id/tv_four"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Orders"
                            android:textColor="#333333"
                            android:layout_marginBottom="30dp"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#F9F9F9"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>