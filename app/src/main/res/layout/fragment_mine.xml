<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:padding="10dp"
            android:src="@drawable/icon_set" />
    </androidx.appcompat.widget.Toolbar>




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingTop="40dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="36dp"
                    android:background="@drawable/person_center_bg">

                    <EditText
                        android:id="@+id/NameText"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="0dp"
                        android:paddingTop="13dp"
                        android:singleLine="true"
                        android:text="Name"
                        android:gravity="bottom|center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/LastNameText"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="110dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/NameText"
                        android:paddingTop="13dp"
                        android:singleLine="true"
                        android:text="LastName"
                        android:gravity="bottom|center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/EmailTextId"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/NameText"
                        android:drawableEnd="@null"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:inputType="textEmailAddress"
                        android:text="Email"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/PhoneTextId"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/NameText"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/EmailTextId"
                        android:drawableEnd="@null"
                        android:drawablePadding="2dp"
                        android:hint="Phone"
                        android:inputType="phone"

                        android:textAlignment="center"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ProfileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/LastNameText"
                        android:layout_marginTop="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_male" />

                </RelativeLayout>

                <LinearLayout

                     android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/MyBookingsLayout"
                        android:layout_marginStart="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/MyBookingsImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/icon_ybwj"
                            tools:srcCompat="@drawable/ic_yuyue" />

                        <TextView
                            android:id="@+id/MyBookingsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="My Bookings"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/WishlistLayout"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/WishlistImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/icon_my_order"
                            app:srcCompat="@drawable/ic_bottombar_favor" />

                        <TextView
                            android:id="@+id/WishlistText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Wishlist"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F9F9F9" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/MyListingsLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/MyListingsImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/icon_ybwj"
                            app:srcCompat="@drawable/ic_bottombar_home" />

                        <TextView
                            android:id="@+id/MyListingsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="My Rentals"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LogoutLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/LogoutImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/icon_my_order"
                            app:srcCompat="@drawable/rightmid_grey" />

                        <TextView
                            android:id="@+id/LogoutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Logout"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>