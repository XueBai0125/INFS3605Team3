<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_logo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/o1"
        android:layout_width="130dp"
        android:layout_height="130dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:text="Office 5764 "
        android:ellipsize="end"
        android:layout_width="0dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:text="580 George St, Sydney NSW 2000, Australia "
        android:ellipsize="end"
        android:layout_width="0dp"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>
    <com.example.infs3605team3.SpaceRatingBar
        android:id="@+id/rb_info"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:starEmpty="@drawable/comment_ratingbar_off"
        app:starFill="@drawable/comment_ratingbar_on"
        app:starImageSize="16dp"
        app:starPadding="12dp"
        app:starStep="0"
        app:stepSize="Full"
        />
    <ImageView
        android:id="@+id/iv_line"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#EBEBED"/>
    <TextView
        app:layout_constraintBottom_toTopOf="@id/iv_line"
        android:id="@+id/tv_price"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:text="$142/Day"
        android:layout_marginBottom="@dimen/dp_16"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:textColor="#b90a09"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>